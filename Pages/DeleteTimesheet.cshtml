@page "{id:int}"
@model KanBan.Pages.DeleteTimesheetModel
@{
}


<h4>Are you sure you want to delete this timesheet?</h4>

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Timesheet.Date.ToString("ddd dd MMM yyyy")</dd>

    <dt class="col-sm-2">Hours</dt>
    <dd class="col-sm-10">@Model.Timesheet.Hours</dd>

    <dt class="col-sm-2">Activity</dt>
    <dd class="col-sm-10">@Model.Timesheet.Activity</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Timesheet.TimesheetID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="./ManageTimesheet" class="btn btn-secondary">Cancel</a>
</form>