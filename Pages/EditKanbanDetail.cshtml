@page "{id:int}"
@model KanBan.Pages.EditKanbanDetailModel

<h4>Update KanbanDetails</h4>
        <form method="post">
            <input type="hidden" asp-for="KanbanDetail.KanbanDetailsID" />

            <div class="form-group">
                <label asp-for="KanbanDetail.KanbanID">Select Kanban</label>
                <select asp-for="KanbanDetail.KanbanID" class="form-control" asp-items="Model.KanbanSelectList">
                    <option value="">Select a Kanban</option>
                </select>
                <span asp-validation-for="KanbanDetail.KanbanID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KanbanDetail.UsersID">Select User</label>
                <select asp-for="KanbanDetail.UsersID" class="form-control" asp-items="Model.UsersSelectList">
                    <option value="">Select a User</option>
                </select>
                <span asp-validation-for="KanbanDetail.UsersID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KanbanDetail.Comments"></label>
                <input asp-for="KanbanDetail.Comments" class="form-control" />
                <span asp-validation-for="KanbanDetail.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-secondary" asp-page="/KanbanDetailsList">Back to List</a>
            </div>
        </form>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
