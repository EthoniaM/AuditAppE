@page
@model KanBan.Pages.CreateAuditModel
@{
}

<h2>Create Audit</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Audit.AuditTitle" class="control-label"></label>
        <input asp-for="Audit.AuditTitle" class="form-control" required />
        <span asp-validation-for="Audit.AuditTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Audit.AuditDescription" class="control-label"></label>
        <textarea asp-for="Audit.AuditDescription" class="form-control"></textarea>
        <span asp-validation-for="Audit.AuditDescription" class="text-danger"></span>
    </div>

  

    <button type="submit" class="btn btn-primary">Create Audit</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}