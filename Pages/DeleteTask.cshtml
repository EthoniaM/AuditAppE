@page "{Id:int}"
@model KanBan.Pages.DeleteTaskModel
@{
    ViewData["Title"] = "Delete Task";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .form-control,
    .form-select {
        background-color: #f0f0f0; /* Light grey background */
        color: #333; /* Text color */
    }
</style>

<div class="container">
    <h2>Delete Task</h2>
    <form id="deleteTaskForm" method="post">
        <input type="hidden" asp-for="Kanban.KanBanID" id="taskId" />
        <div class="form-group">
            <p>Are you sure you want to delete this task?</p>
            <p><strong>Audit ID:</strong> @Model.Kanban.AuditID</p>
            <p><strong>Task Title:</strong> @Model.Kanban.TaskTitle</p>
            <p><strong>Status:</strong> @Model.Kanban.Status</p>
            <p><strong>Priority:</strong> @Model.Kanban.Priority</p>
            <p><strong>Description:</strong> @Model.Kanban.TaskDescription</p>
            <p><strong>Start Date:</strong> @Model.Kanban.StartDate?.ToShortDateString()</p>
            <p><strong>End Date:</strong> @Model.Kanban.EndDate?.ToShortDateString()</p>
        </div>
        <button type="submit" class="btn btn-success">Save Changes</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}